{% extends "main.twig" %}
{% block content %}
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Parser <small>Create table with touchpoints</small></h3>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="well">
                        <form class="form-horizontal">
                            <div class="row">
                                <div class="row" style="margin-top: 50px;">
                                    <div class="col-md-4 col-sm-2 col-xs-4 col-md-offset-3">
                                        Quantity of touchpoint : <input type="number" value="2000" name="nbTouchpoint">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="row" style="margin-top: 50px;">
                                    <div class="col-md-4 col-sm-2 col-xs-4 col-md-offset-3">
                                        Step : <input type="number" value="500" name="step">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="row" style="margin-top: 50px;">
                                    <div class="col-md-2 col-sm-2 col-xs-4 col-md-offset-3">
                                        <button name="submit" value=1 type="submit" class="btn btn-success">Parse</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}